<Window x:Class="MSLauncher.UI.Utils.MessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MSLauncher.UI.Converters"
        Title="MSLauncher" 
        Height="Auto" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        WindowStyle="None"
        Background="Transparent"
        SizeToContent="Height"
        AllowsTransparency="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <local:IconConverter x:Key="IconConverter"/>

        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ControlBackgroundColor" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="ControlHoverBackgroundColor" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="PrimaryAccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#F1F1F1"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#A0A0A0"/>

        <Style x:Key="MessageIconStyle" TargetType="Image">
            <Setter Property="Source" Value="{Binding Icon, Converter={StaticResource IconConverter}}"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
        </Style>

        <Style TargetType="Button" x:Key="BaseMessageBoxButtonStyle">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle" BasedOn="{StaticResource BaseMessageBoxButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource BaseMessageBoxButtonStyle}">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackgroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4F4F4F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border CornerRadius="12" 
            Background="{StaticResource PrimaryBackgroundColor}"
            Margin="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" Opacity="0.3" ShadowDepth="0" Color="Black"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                <Image Style="{StaticResource MessageIconStyle}"/>
                <TextBlock Text="{Binding Title}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextColor}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Grid.Row="1" 
                       Text="{Binding Message}"
                       Foreground="{StaticResource SecondaryTextColor}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0 0 0 25"/>

            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">    

                <Button Content="Да" 
                        x:Name="YesButton"
                        Click="YesButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,0,10,0"/>

                <Button Content="Нет" 
                        x:Name="NoButton"
                        Click="NoButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"/>

                <Button Content="Отмена" 
                        x:Name="CancelButton"
                        Click="CancelButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"/>

                <Button Content="ОК" 
                        x:Name="OkButton"
                        Click="OkButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window> 