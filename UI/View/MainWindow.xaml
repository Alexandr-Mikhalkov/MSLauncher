<Window x:Class="MSLauncher.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSLauncher.UI.View"
        xmlns:converters="clr-namespace:MSLauncher.UI.Converters"
        mc:Ignorable="d"
        Title="MSLauncher" Height="600" Width="900" MinHeight="550" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <converters:NullToBooleanConverter x:Key="NullToBooleanConverter"/>

        <SolidColorBrush x:Key="InstalledStateColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="SecondaryBackgroundColor" Color="#2D2D30"/>
        <SolidColorBrush x:Key="ControlBackgroundColor" Color="#3C3C3C"/>
        <SolidColorBrush x:Key="ControlHoverBackgroundColor" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="PrimaryAccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#F1F1F1"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#A0A0A0"/>

        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#004578"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2,0,2,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackgroundColor}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackgroundColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="MenuItemButtonStyle" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ControlHoverBackgroundColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="VersionItemTemplate">
            <Border Width="180" Height="140" Background="{StaticResource ControlBackgroundColor}" CornerRadius="8" Padding="10">
                <StackPanel>
                    <Image Source="{Binding ImageUrl}" Height="100" Stretch="UniformToFill"/>
                    <TextBlock Text="{Binding VersionName}" Foreground="{StaticResource PrimaryTextColor}" HorizontalAlignment="Center" Margin="0,5,0,0" FontSize="14"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <Style TargetType="ListBoxItem" x:Key="VersionListBoxItemStyle">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource InstalledStateColor}"/>
                            </DataTrigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ControlHoverBackgroundColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ScrollThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle"
                        Background="{StaticResource PrimaryAccentColor}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#0099FF"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#33ADFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomScrollBarStyle" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="MinWidth" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="MinHeight" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="{TemplateBinding Background}">
                            <Border CornerRadius="5" Background="{StaticResource ControlBackgroundColor}" Opacity="0.8"/>

                            <Track x:Name="PART_Track"
                           IsDirectionReversed="true"
                           IsEnabled="{TemplateBinding IsMouseOver}">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" Style="{StaticResource ScrollThumbStyle}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="MinWidth" Value="0"/>
                    <Setter Property="Height" Value="10"/>
                    <Setter Property="MinHeight" Value="10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="{TemplateBinding Background}">
                                    <Border CornerRadius="5" Background="{StaticResource ControlBackgroundColor}" Opacity="0.8"/>
                                    <Track x:Name="PART_Track" IsEnabled="{TemplateBinding IsMouseOver}">
                                        <Track.Thumb>
                                            <Thumb x:Name="Thumb" Style="{StaticResource ScrollThumbStyle}"/>
                                        </Track.Thumb>
                                    </Track>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" BorderBrush="{StaticResource ControlBackgroundColor}" BorderThickness="1">
        <Border.Background>
            <ImageBrush ImageSource="{Binding CurrentBackgroundImage}" Stretch="UniformToFill"/>
        </Border.Background>

        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="50" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="AvatarMenuButton" Grid.Column="0" Margin="15,0,0,0"
                              Width="36" Height="36" BorderThickness="0" Cursor="Hand">
                    <ToggleButton.Style>
                        <Style TargetType="ToggleButton">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Ellipse x:Name="BackgroundEllipse" Stroke="{StaticResource PrimaryAccentColor}" StrokeThickness="1.5">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="https://crafatar.com/avatars/ec561538-f3fd-461d-aff5-086b22154bce?size=32&amp;overlay"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="BackgroundEllipse" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <TextBlock Grid.Column="1" Text="MSLauncher" Foreground="{StaticResource PrimaryTextColor}" FontSize="16" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False"/>

                <Button Grid.Column="2" Content="✕" Click="CloseButton_Click" Cursor="Hand" FontWeight="Bold" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" Width="30" Height="30">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource SecondaryTextColor}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4C4C"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Popup IsOpen="{Binding IsChecked, ElementName=AvatarMenuButton, Mode=TwoWay}"
                       PlacementTarget="{Binding ElementName=AvatarMenuButton}"
                       Placement="Bottom" StaysOpen="False" AllowsTransparency="True"
                       VerticalOffset="5">
                    <Border Background="{StaticResource SecondaryBackgroundColor}" CornerRadius="8"
                            BorderBrush="{StaticResource ControlBackgroundColor}" BorderThickness="1"
                            Padding="5" MinWidth="180">
                        <StackPanel>
                            <TextBlock Text="{Binding Username}" FontWeight="Bold" Foreground="{StaticResource PrimaryTextColor}" Margin="12,8,12,8" FontSize="14"/>

                            <Separator Background="{StaticResource ControlBackgroundColor}" Margin="5,0"/>

                            <Button Content="Настройки" Style="{StaticResource MenuItemButtonStyle}" Command="{Binding ShowSettingsCommand}"/>
                            <Button Content="Выйти" Style="{StaticResource MenuItemButtonStyle}" Command="{Binding LogoutCommand}"/>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="20,10,20,10">
                    <TextBlock Text="Последние запуски" Foreground="{StaticResource SecondaryTextColor}" FontSize="16" Margin="5,0,0,10"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ListBox x:Name="RecentVersionsListBox"
                                 ItemsSource="{Binding RecentVersions}"
                                 SelectedItem="{Binding RecentSelectedVersion, Mode=TwoWay}"
                                 ItemTemplate="{StaticResource VersionItemTemplate}"
                                 ItemContainerStyle="{StaticResource VersionListBoxItemStyle}"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="20,10,20,10">
                    <TextBlock Text="Все версии" Foreground="{StaticResource SecondaryTextColor}" FontSize="16" Margin="5,0,0,10"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Padding="0,0,0,10">   
                        <ScrollViewer.Resources>
                            <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource CustomScrollBarStyle}"/>
                        </ScrollViewer.Resources>
                        <ListBox x:Name="AllVersionsListBox"
                                 ItemsSource="{Binding AllVersions}"
                                 SelectedItem="{Binding AllSelectedVersion, Mode=TwoWay}"
                                 ItemTemplate="{StaticResource VersionItemTemplate}"
                                 ItemContainerStyle="{StaticResource VersionListBoxItemStyle}"
                                 Background="Transparent" BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>

                <Grid Grid.Row="2" Margin="20" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0">
                        <ProgressBar Height="4" IsIndeterminate="{Binding IsBusy}" BorderThickness="0" Background="Transparent" Foreground="{StaticResource PrimaryAccentColor}"/>
                        <TextBlock Text="{Binding StatusText}" 
                   Foreground="{StaticResource SecondaryTextColor}" TextWrapping="Wrap" 
                   HorizontalAlignment="Left" TextAlignment="Left" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1" 
                        Content="{Binding ButtonText}"
                        Command="{Binding LaunchGameCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        MinWidth="200" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>